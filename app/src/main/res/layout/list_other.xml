<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="3dp"
        app:contentPadding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#fff">
            <ImageView
                android:id="@+id/img_post"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/real"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tvPost_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="13sp"
                    android:textColor="#000"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvPost_owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pune"
                    android:textSize="12sp"
                    android:textColor="@color/md_grey_600"
                    android:layout_marginTop="5dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >
                    <com.offersbull.view.TextAwesome
                        android:id="@+id/view_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#xf06e;"
                        android:textColor="@color/md_grey_600"
                        android:textSize="10sp"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_views"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/md_grey_600"
                        android:textSize="10sp"
                        android:text="10"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/view_symbol"
                        android:layout_toEndOf="@+id/view_symbol"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/md_grey_600"
                        android:layout_alignParentRight="true"
                        android:textSize="10sp"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>