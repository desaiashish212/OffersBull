<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="3dp"
    app:contentPadding="10dp"
    android:layout_marginRight="10dp">


    <LinearLayout

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:background="#fff"
        >
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/img_post"
                android:layout_width="200dp"
                android:src="@drawable/real"
                android:layout_height="150dp"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:background="#80000000"
                android:padding="3dp"
                android:textSize="10sp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <TextView
                android:id="@+id/tvPost_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:maxLength="25"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tvPost_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By Ashish"
                android:textSize="12sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="@color/md_grey_700"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tvCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pimpari,Pune"
                android:textSize="12sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="@color/md_grey_700"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_red_900"
                android:layout_alignRight="@+id/call"
                android:layout_marginTop="5dp"
                android:text="Rs. 20000/-"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <com.offersbull.view.TextAwesome
                    android:id="@+id/view_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#xf06e;"
                    android:textColor="@color/md_grey_600"
                    android:textSize="10sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_600"
                    android:textSize="10sp"
                    android:text="10"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/view_symbol"
                    android:layout_toEndOf="@+id/view_symbol"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_600"
                    android:layout_alignParentRight="true"
                    android:textSize="10sp"/>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>




</android.support.v7.widget.CardView>